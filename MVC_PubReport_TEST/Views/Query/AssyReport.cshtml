    //执行一个laydate实例
    
laydate.render({
    elem: '#sdt', //指定元素
    type: 'datetime',
    format: 'yyyyMMddHHmmss',
    value:  new Date(),
    //min:-2
});

laydate.render({
    elem: '#edt', //指定元素
    type: 'datetime',
    value: new Date(),
    format: 'yyyyMMddHHmmss'
});
</script> 
 


